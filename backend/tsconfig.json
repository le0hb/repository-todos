{
  "compilerOptions": {
    "target": "es5",                          
    "module": "commonjs",                     
    "outDir": "./dist",                       
    "rootDir": "./src",                       
    "strict": true,                           
    "strictPropertyInitialization": false,  
    "baseUrl": "./src",
    "allowJs": true,                 
    "paths": {
      "@modules/*":["modules/*"],
      "@providers/*":["providers/*"],
      "@errors/*":["errors/*"],
      "@config/*":["config/*"],
      "@middlewares/*":["routes/middlewares/*"]
    },                         
    "esModuleInterop": true,                  
    "experimentalDecorators": true,        
    "emitDecoratorMetadata": true,         
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true  
  }
}